datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String      @id @default(uuid())
  email    String      @unique
  username String
  password String
}

model Venue {
  id          String      @id @default(uuid())
  name        String
  photo       String
  schedule    String
  contact     String
  description String
  tags?       String[]
}

model VenueTags {
  id         String      @id @default(uuid())
  categories String[]
  cuisine    String[]
  features   String[]
}